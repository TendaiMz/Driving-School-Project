                           VerticalAlignment="Center"
                           x:Name="txbPending"
                           Grid.Column="3"
                           Foreground="Blue"
                           FontWeight="SemiBold"
                           Margin="-30,0,0,0" />
            </Grid>

        </WrapPanel>
