                       Grid.Column="0"
                       Content="Completed" />
                <Label Width="80"
                       Grid.Column="2"
                       Content="Pending" />
                <TextBlock Width="20"
                           VerticalAlignment="Center"
                           x:Name="txbCompleted"
                           Grid.Column="1"
                           Foreground="Blue"
                           FontWeight="SemiBold"
                           Margin="-30,0,0,0" />
