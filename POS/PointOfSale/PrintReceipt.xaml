<Window x:Class="PointOfSale.PrintReceipt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PrintReceipt" Height="300" Width="300" VerticalAlignment="Center" HorizontalAlignment="Center">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="232*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="143*"/>
                <ColumnDefinition Width="149*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="24*"/>
                <RowDefinition Height="21*"/>
                <RowDefinition Height="26*"/>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="27*"/>
                <RowDefinition Height="27*"/>
                <RowDefinition Height="91*"/>
            </Grid.RowDefinitions>
            <TextBox Name="txtDate" Grid.Column="1" Grid.Row="0" />
            <TextBox  Name="txtName" Grid.Column="0" Grid.Row="1"/>
            <TextBox  Name="txtQuntuty" Grid.Column="0" Grid.Row="2"/>


        </Grid>
    </Grid>

</Window>
